root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.ts,*.tsx]
quote_type = single
semicolon = true

[*.{js,jsx,ts,tsx}]
max_line_length = 100

[*.{js,jsx,ts,tsx,json}]
tab_width = 2

[*.json]
quote_type = double

[{**.md,**.json}]
insert_final_newline = false
